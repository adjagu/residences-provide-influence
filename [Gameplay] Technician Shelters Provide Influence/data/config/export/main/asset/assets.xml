    Path="self::InfluenceSource/InfluenceAmount"
    ModOpID="TechnicianInfluenceAmount"
    ExposeID="Technician"
    Description="Influence per technician shelter."
    Kind="Slider"
  >
    <SliderDefinition Min="0" Max="100" Stepping="1" />
  </ImyaExpose>

